<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= csrf_meta_tag %>
  <%= render 'layouts/stylesheets' %>
</head>
<body>
  <div id="container">
    <%= render 'layouts/header' %>
    <div id="wrapper" class="wat-cf">
      
      <div class="flash">
        <% flash.each do |type, message| -%>
          <div class="message <%= type %>">
            <p><%= message %></p>
          </div>
        <% end %>
      </div>
      <div id="main">
        <%= yield %>
        <%= render 'layouts/footer' %>
      </div>

<%= debug(params) if Rails.env.development? %>

      <div id="sidebar">
        <%= yield :sidebar %>
      </div>
    </div>    
  </div>
</body>
</html>
